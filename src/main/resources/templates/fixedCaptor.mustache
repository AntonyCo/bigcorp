<html>
<head>
    <title>Site BigCorp</title>
    {{> partial-import}}
</head>
<body>
{{> partial-header}}
<div class="container">
    {{captor}}
    {{#captor}}<h1>Modification Captor</h1>{{/captor}}
    {{^captor}}<h1>Création Captor</h1>{{/captor}}

    <form action="/sites" method="post">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" name="name" required
                   value="{{#captor.name}}{{captor.name}}{{/captor.name}}"
                   aria-describedby="nameHelp" placeholder="Nom du site">
            <label for="name">Power Source</label>
            <input type="text" class="form-control" id="powersource" name="powersource" readonly
                   value="{{#captor.powerSource}}{{captor.powerSource}}{{/captor.powerSource}}">
            <label for="name">Default power</label>
            <input type="text" class="form-control" id="powersource" name="powersource"
                   value="{{#captor.defaultPowerInWatt}}{{captor.defaultPowerInWatt}}{{/captor.defaultPowerInWatt}}">
            <small id="nameHelp" class="form-text text-muted">Le nom d'un site doit
                être unique</small>
        </div>

        <a class="btn btn-secondary" href="/sites">Annuler</a>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{#captor.id}}<button type="button" class="btn btn-danger" data-toggle="modal"
                            data-target="#deleteModal">Supprimer</button>{{/captor.id}}
    </form>
</div>
{{> partial-footer}}
</body>
</html>